---
// source: https://github.com/withastro/starlight/blob/main/docs/src/components/media-card.astro
interface Props {
  minColumnWidth?: string;
}
const { minColumnWidth } = Astro.props;
---

<ul class="fluid-grid"><slot /></ul>

<style define:vars={{ minColumnWidth }}>
  .fluid-grid {
    display: grid;
    padding: 0;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, var(--minColumnWidth, 11rem)), 1fr));
    list-style: none;
  }

  .fluid-grid > :global(*) {
    margin-top: 0 !important;
  }
</style>
